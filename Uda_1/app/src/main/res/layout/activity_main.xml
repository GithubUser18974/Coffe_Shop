<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohamed_araby.uda_1.MainActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="350dp"
        android:layout_height="214dp"
        android:src="@drawable/m"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/cont48"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="4dp"
        android:gravity="center"
        android:text="@string/contact_email"
        android:autoLink="email"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"

        />

    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:drawableLeft="@drawable/loc48"
        android:text="Benha,qualyubia"
        tools:text="Benha,qualyubia"
        android:autoLink="map"
        android:layout_marginTop="8dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="4dp"
        android:layout_marginLeft="4dp"

        />

    <TextView
        android:id="@+id/duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/dur48"
        android:gravity="center"
        android:text="From 8 am to 11 pm"
        android:autoLink="all"
        android:layout_marginTop="8dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="4dp"
        android:layout_marginLeft="4dp"

        />

</LinearLayout>
